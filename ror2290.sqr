BEGIN-PROCEDURE cleanup

   LET #report_status = #sql-status
 
   IF (#report_status = {SUCCESS})
      DO display_count
   ELSE
      DISPLAY 'Exiting with error status.'
      DISPLAY ''
   END-IF

   IF $mode <> 'U'
      ROLLBACK
      Show 'Rolling back updates...'
   END-IF

   #DEBUGD rollback
