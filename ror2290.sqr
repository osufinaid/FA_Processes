                     LET #BOX_R = #BOX_B - #BOX_P
                     if #BOX_Q > #BOX_R
                  
                        LET #BOX_S = #BOX_Q - #BOX_R
                        LET #BOX_T = round((#BOX_F * 0.5),0)
