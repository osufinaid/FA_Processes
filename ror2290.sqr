!               show 'TOTAL_TERM_DAYS:     ' #total_term_days
!               show 'TERM_START_YYYYMMDD: ' $stvterm_start
!               show 'TERM_END_YYYYMMDD:   ' $stvterm_end
!               show 'UNFD Paid Amt:       ' #UNFD_PAID_AMT ' ' $UNFD_PAID_AMT
               
               
