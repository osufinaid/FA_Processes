               LET #MEAL_PLAN_AMT                = to_number(translate($MEAL_PLAN_AMT,',','')) 
               LET #STUDENT_FEE_AMT              = to_number(translate($STUDENT_FEE_AMT,',','')) 
               LET #DISTANCE_TUITION_AMT         = to_number(translate($DISTANCE_TUITION_AMT,',','')) 
