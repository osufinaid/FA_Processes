BEGIN-PROCEDURE check_rorstat

  LET $rorstat_exists = ''

BEGIN-SELECT ON-ERROR=error_handler ('check_rorstat')
rp_applicant_status.f_exists($aid_year,#pidm)    &rorstat_exists  

   LET $rorstat_exists = &rorstat_exists
   
from dual                   

END-SELECT
END-PROCEDURE 

